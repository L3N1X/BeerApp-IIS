@model WeatherViewModel
@{
    ViewData["Title"] = "DHMZ XML-RPC";
}
<form asp-controller="Weather" asp-action="Index" method="post">
    <div class="form-group">
        @if (Model?.Message is not null)
        {
            <div class="alert alert-danger" role="alert">
                @Model?.Message
            </div>
        }
    </div>
    <div class="form-group mb-3">
        @if (Model?.Temperature is not null)
        {
            if (Model.Temperature.Contains("NOCANDO"))
            {
                <h1 class="text-danger text-center">NOCANDO</h1>
            }
            else
            {
                <h1 class="text-center">@Model?.Temperature°C</h1>
                <h4 class="text-center">@Model?.City</h4>
            }
        }
    </div>
    <div class="form-group mb-3">
        <input asp-for="City" class="form-control text-center" placeholder="Type your name of a city..." />
    </div>
    <div>
        <div class="row">
            <div class="col-12">
                <button type="submit" class="btn btn-info w-100">Get temperature</button>
            </div>
        </div>
    </div>
</form>